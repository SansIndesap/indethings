---
import type { ItemData } from '@models/item-model';

interface Props {
  data: ItemData;
}

const { data } = Astro.props;
const url = `${Astro.url.pathname}/${data.slug}`;
---

<li data-url={url} class={`grid grid-rows-3 p-4 border-2 border-black w-56 h-44 bg-white
            shadow-[2px_3px_0px_0px_#000000] hover:translate-x-[3px]
            hover:translate-y-[2px] hover:shadow-none transition-all
            cursor-pointer`}>
  <header class="grid grid-cols-4 gap-1 items-center font-imbplexmonosemi">
    <div class="col-span-3">
      <h1 class="capitalize leading-4.5 ">{data.title}</h1>
    </div>
    <div class="flex justify-end">
      <span class="inline-block text-right bg-lime-400 w-min p-1 text-xs">{data.tags[0]}</span>
    </div>
  </header>
  <section
    class="row-span-2 flex flex-col h-full justify-between pt-2 text-sm font-roboto text-gray-500"
  >
    <p>{data.description}</p>
    <footer class="text-xs">Last Update: {data.date.toLocaleDateString()}</footer>
  </section>
</li>

---
import "@styles/global.css";
interface Props {
	title?: string;
}

const { title = "" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="https://assets.zyrosite.com/cdn-cgi/image/format=auto,w=192,h=192,fit=crop,f=png/YNqJxLg8NWsoaXnv/favicon_indesap-01-YlevrWM19gUWGgRl.png">
		<meta name="generator" content={Astro.generator} />
		<title>IndeThings {title ? " | " + title : ""}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
